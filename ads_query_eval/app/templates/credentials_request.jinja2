{% extends 'base.jinja2' %}

{% block content %}
    <form class="w-full max-w-sm" method="post" action="/credentials_request">
        <div class="flex items-center border-b border-teal-500 py-2">
            <input name="invite_link_token" type="hidden" value="{{ invite_link_token }}">
            <input name="email_address" class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" type="email" placeholder="Email address" aria-label="Email address">
            <button class="flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded" type="submit">
                Request Credentials
            </button>
        </div>
    </form>
{% endblock %}